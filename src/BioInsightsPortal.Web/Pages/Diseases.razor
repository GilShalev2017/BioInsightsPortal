@page "/diseases"
@using BioInsightsPortal.Web.Data
@inject BioInsightsService BioInsightsService

<PageTitle>Diseases</PageTitle>

<h2 class="text-2xl font-bold mb-4 text-gray-800">Diseases</h2>
<p class="mb-4 text-gray-600">A list of diseases from our knowledge base.</p>

@if (diseases == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="min-w-full divide-y divide-gray-200 shadow-md rounded-lg overflow-hidden">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @foreach (var disease in diseases)
            {
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@disease.Name</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@disease.Category</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@disease.Description</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<BioInsightsService.Disease>? diseases;

    protected override async Task OnInitializedAsync()
    {
        diseases = await BioInsightsService.GetDiseasesAsync();
    }
}
