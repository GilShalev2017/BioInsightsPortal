@page "/associations"
@using BioInsightsPortal.Web.Data
@inject BioInsightsService BioInsightsService

<PageTitle>Associations</PageTitle>

<h2 class="text-2xl font-bold mb-4 text-gray-800">Gene-Disease Associations</h2>
<p class="mb-4 text-gray-600">Explore relationships between genes and diseases.</p>

@if (associations == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="min-w-full divide-y divide-gray-200 shadow-md rounded-lg overflow-hidden">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Gene ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Disease ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Evidence Score</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Source</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @foreach (var assoc in associations)
            {
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@assoc.GeneId</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@assoc.DiseaseId</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@assoc.EvidenceScore</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@assoc.Source</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<BioInsightsService.Association>? associations;

    protected override async Task OnInitializedAsync()
    {
        associations = await BioInsightsService.GetAssociationsAsync();
    }
}
