@page "/drugs"
@using BioInsightsPortal.Web.Data
@inject BioInsightsService BioInsightsService

<PageTitle>Drugs</PageTitle>

<h2 class="text-2xl font-bold mb-4 text-gray-800">Drugs</h2>
<p class="mb-4 text-gray-600">A list of drugs from our knowledge base.</p>

@if (drugs == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="min-w-full divide-y divide-gray-200 shadow-md rounded-lg overflow-hidden">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Target Gene ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Indication</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @foreach (var drug in drugs)
            {
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@drug.Name</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@(drug.TargetGeneId.HasValue? drug.TargetGeneId.Value.ToString() : "N/A")</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@drug.Indication</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<BioInsightsService.Drug>? drugs;

    protected override async Task OnInitializedAsync()
    {
        drugs = await BioInsightsService.GetDrugsAsync();
    }
}
